<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jaime_lopez_taller_3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jaime_Lopez_Taller_3">

        <!-- Actividad principal que se carga al iniciar la aplicación -->
        <activity
            android:name="com.example.jaime_lopez_taller_3.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad Principal donde se ingresan los datos del usuario -->
        <activity android:name="com.example.jaime_lopez_taller_3.activity.RedActivity"
            android:exported="true" />

        <!-- Actividad de configuración para cambiar el fondo de la aplicación -->
        <activity android:name="com.example.jaime_lopez_taller_3.activity.ConfiguracionActivity"
            android:exported="true" />

    </application>

</manifest>
